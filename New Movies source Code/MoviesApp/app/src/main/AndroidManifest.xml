<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviesapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_film_reel"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_film_reel"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoviesApp"
        android:usesCleartextTraffic="true">
        <activity android:name=".MovieDetails" android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>